{
    "manifest_version": 3,
    "name": "LinkedIn Connection Helper",
    "version": "1.0",
    "description": "Auto-fills personalized connection messages on LinkedIn",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "LinkedIn Connection Helper"
    }
  }